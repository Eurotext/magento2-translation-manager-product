<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="eurotext_translationmanager">
            <group id="product" translate="label" sortOrder="30" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Product Settings</label>
                <field id="attributes_enabled" type="text" translate="label,comment"
                       showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Enabled Attributes</label>
                    <comment>Default setting for attributes transfered to Eurotext for translation</comment>
                </field>
            </group>
        </section>
    </system>
</config>